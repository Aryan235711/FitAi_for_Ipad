# Base application URL (set to your deployed domain in production)
PUBLIC_URL=http://localhost:5000

# Database connection
DATABASE_URL=postgresql://user:password@localhost:5432/fitfluid

# Session configuration
SESSION_SECRET=replace-with-strong-random-string
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax

# Google OAuth credentials (Web application client)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional: OpenAI key for AI insights
AI_INTEGRATIONS_OPENAI_API_KEY=
AI_INTEGRATIONS_OPENAI_BASE_URL=

# Optional: custom OpenAI proxy base URL (leave blank to use default)
